<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:id="@+id/backgroundPic"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/trans_white80"
        android:orientation="vertical"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:gravity="center"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/signUpUinBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/uin"
            android:drawablePadding="10sp"
            android:hint="UIN"
            android:inputType="number"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/signUpNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="10sp"
            android:hint="First Name + Last Name"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/signUpEmailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10sp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/signUpPasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/signUpRPasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/rename"
            android:drawablePadding="10sp"
            android:hint="Re-enter your Password"
            android:inputType="textPassword"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/signUpSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            />


    </LinearLayout>


</ScrollView>

</RelativeLayout>